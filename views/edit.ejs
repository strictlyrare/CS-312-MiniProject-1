<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title mb-3">Edit Post</h5>
        <form method="POST" action="/posts/<%= post.id %>/edit" class="vstack gap-3">
          <div>
            <label class="form-label">Author</label>
            <input name="author" class="form-control" value="<%= post.author %>" required />
          </div>
          <div>
            <label class="form-label">Title</label>
            <input name="title" class="form-control" value="<%= post.title %>" required />
          </div>
          <div>
            <label class="form-label">Category</label>
            <select name="category" class="form-select">
              <% for (const c of categories) { %>
                <option value="<%= c %>" <%= post.category===c ? 'selected' : '' %>><%= c %></option>
              <% } %>
            </select>
          </div>
          <div>
            <label class="form-label">Content</label>
            <textarea name="content" class="form-control" rows="8" required><%= post.content %></textarea>
          </div>
          <div class="d-flex gap-2">
            <a href="/" class="btn btn-light">Cancel</a>
            <button class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
