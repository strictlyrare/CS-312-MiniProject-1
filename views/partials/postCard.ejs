<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div>
        <h5 class="card-title mb-1"><%= p.title %></h5>
        <p class="text-muted mb-2">
          by <strong><%= p.author %></strong> ·
          <span title="<%= p.createdAt %>"><%= formatDate(p.createdAt) %></span> ·
          <span class="badge bg-secondary"><%= p.category %></span>
        </p>
      </div>
      <div class="hstack gap-2">
        <a href="/posts/<%= p.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
        <form method="POST" action="/posts/<%= p.id %>/delete" onsubmit="return confirm('Delete this post?')">
          <button class="btn btn-sm btn-outline-danger">Delete</button>
        </form>
      </div>
    </div>
    <p class="card-text mt-2" style="white-space:pre-wrap;"><%= p.content %></p>
  </div>
</div>
